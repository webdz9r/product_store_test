<p id="notice"><%= notice %></p>

<h1>Listing Specs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Promo title</th>
      <th>Value</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @specs.each do |spec| %>
      <tr>
        <td><%= spec.name %></td>
        <td><%= spec.promo_title %></td>
        <td><%= spec.value %></td>
        <td><%= spec.category_id %></td>
        <td><%= link_to 'Show', spec %></td>
        <td><%= link_to 'Edit', edit_spec_path(spec) %></td>
        <td><%= link_to 'Destroy', spec, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

