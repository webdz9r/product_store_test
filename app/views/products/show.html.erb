<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class='row'>
  <div class='col-lg-6'>
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
      <dd><%= @product.name %></dd>
      <dt><strong><%= model_class.human_attribute_name(:short_name) %>:</strong></dt>
      <dd><%= @product.short_name %></dd>
      <dt><strong><%= model_class.human_attribute_name(:short_summary) %>:</strong></dt>
      <dd><%= @product.short_summary %></dd>
      <dt><strong><%= model_class.human_attribute_name(:website) %>:</strong></dt>
      <dd><%= @product.website %></dd>
      <dt><strong><%= model_class.human_attribute_name(:discontinued) %>:</strong></dt>
      <dd><%= @product.discontinued %></dd>
      <dt><strong><%= model_class.human_attribute_name(:upc) %>:</strong></dt>
      <dd><%= @product.upc %></dd>
      <dt><strong><%= model_class.human_attribute_name(:asin) %>:</strong></dt>
      <dd><%= @product.asin %></dd>
      <dt><strong><%= model_class.human_attribute_name(:launch_at) %>:</strong></dt>
      <dd><%= @product.launch_at %></dd>
      <dt><strong><%= model_class.human_attribute_name(:embargo_at) %>:</strong></dt>
      <dd><%= @product.embargo_at %></dd>
    </dl>
  


    <%= link_to t('.back', :default => t("helpers.links.back")),
                  products_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_product_path(@product), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  product_path(@product),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>

  </div>

  <div class='col-lg-6'>
    <div class='row'>
      <% if @product.images.empty? %>
        No images - <a href='/images/new'>Upload sum</a>
      <% end %> 
      <% @product.images.each do |img| %>
        <div class='col-sm-2'><%= image_tag img.file.url(:thumb) %></div>
      <% end %>
    
  </div>
</div>