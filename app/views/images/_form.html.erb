
<%= bootstrap_form_for(@image, :html => { :multipart => true }) do |f| %>
  
  <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Select Product to assign Image</h3>
  </div>
  <div class="panel-body">
    <%= f.autocomplete_field :product_name, autocomplete_product_name_products_path, :id_element => '#image_product_id', :class => "form-control", :autocomplete => :off %>  
  </div>
</div>

  

    <% if @image.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@image.errors.count, "error") %> prohibited this image from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @image.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

    <%= f.text_field :name %>
  <%= f.text_field :role %>
  <%= f.file_field :file  %>
  <%= f.hidden_field :product_id %>
  
  <%= f.submit nil, :class => 'btn btn-primary' %>
      
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            products_path, :class => 'btn btn-default' %>

<% end %>
