<%= bootstrap_form_for(@personality) do |f| %>

    <% if @personality.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@personality.errors.count, "error") %> prohibited this personality from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @personality.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Personality Details</h3>
      </div>
      <div class="panel-body">
        <%= f.text_field :name %>
        <%= f.select(:position_id, Position.all.collect {|a| [a.name, a.id]}, :include_blank => true) -%>
        <%= f.select(:company_id, Company.all.collect {|a| [a.name, a.id]}, :include_blank => true) -%>
        <%= f.text_area :short_summary %>
        <%= f.text_field :website %>
        <%= f.text_field :twitter %>
        <%= f.text_field :instagram %>
        <%= f.text_field :linked_in %>
        <%= f.text_field :facebook %>
      </div>
  </div>
  

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            personalities_path, :class => 'btn btn-default' %>

<% end %>
